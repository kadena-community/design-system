{
  "$name": "Kode Design System",
  "$version": "0.0.1",
  "kda": {
    "foundation": {
      "border": {
        "no": {
          "$type": "border",
          "$value": {
            "borderWidth": 1,
            "borderStyle": "solid",
            "borderColor": "#5794FF"
          }
        }
      },
      "color": {
        "foreground": {
          "$type": "color",
          "$description": "primary foreground color",
          "$value": "#aa4411",
          "$extensions": {
            "mode": {
              "dark": "#cccccc"
            }
          }
        },
        "background": {
          "$type": "color",
          "$description": "primary background color",
          "$value": "#ff0011",
          "$extensions": {
            "mode": {
              "dark": "#0099CC"
            }
          }
        },
        "categorical": {
          "category1": {
            "$type": "color",
            "$description": "This is the category 1 color",
            "$value": "#AABBCC",
            "$extensions": {
              "mode": {
                "dark": "#CCBBAA"
              },
              "alpha": {
                "@20": {
                  "$value": 20,
                  "$base": "#00FF00"
                },
                "@40": {
                  "$value": 40,
                  "$base": "#aabbcc"
                },
                "@60": {
                  "$value": 60,
                  "$base": "#aa4411"
                },
                "@80": {
                  "$value": 70,
                  "$base": "#5794FF"
                }
              }
            }
          },
          "category2": {
            "$type": "color",
            "$value": "#00FF00",
            "$extensions": {
              "mode": {
                "dark": "#000000"
              },
              "alpha": {
                "@20": {
                  "$value": 20
                },
                "@40": {
                  "$value": 30
                },
                "@60": {
                  "$value": 40
                },
                "@80": {
                  "$value": 50
                }
              }
            }
          }
        },
        "intent": {
          "primary": {
            "default": {
              "background": {
                "$type": "color",
                "$description": "color description",
                "$value": "#aabbcc"
              }
            }
          },
          "secondary": {
            "$title": "Secondary Title",
            "$type": "color",
            "$description": "color description",
            "$value": "#aa4411"
          },
          "tertiary": {
            "$type": "color",
            "$description": "color description",
            "$value": "#5794FF",
            "$extensions": {
              "mode": {
                "dark": "#2012CC"
              }
            }
          }
        }
      },
      "effect": {
        "s2": {
          "$type": "blur",
          "$title": "Layer Blur",
          "$description": "This is the layer blur description",
          "$value": {
            "radius": 40
          }
        },
        "blur": [
          {
            "$name": "layerBlur",
            "$type": "blur",
            "$title": "Layer Blur",
            "$description": "This is the layer blur description",
            "$value": {
              "radius": "0.75rem",
              "visible": true
            }
          }
        ],
        "s1": {
          "$name": "level1",
          "$type": "shadow",
          "$title": "Shadow Level 1",
          "$description": "This is the shadow description",
          "$value": {
            "color": "#AABBCC",
            "offsetX": "4px",
            "offsetY": "0.5rem",
            "blur": "0.75rem",
            "spread": "4px"
          }
        },
        "shadow": [
          {
            "$name": "level1",
            "$type": "shadow",
            "$title": "Shadow Level 1",
            "$description": "This is the shadow 1 description",
            "$value": {
              "color": "#AABBCC",
              "offsetX": "4px",
              "offsetY": "0.5rem",
              "blur": "0.75rem",
              "spread": "4px"
            }
          },
          {
            "$name": "level2",
            "$type": "shadow",
            "$title": "Shadow Level 2",
            "$description": "This is the shadow 2 description",
            "$value": {
              "color": "#00FF00",
              "offsetX": "4rem",
              "offsetY": "4rem",
              "blur": "0.75rem",
              "spread": "2rem"
            }
          },
          {
            "$name": "level3",
            "$type": "shadow",
            "$title": "Shadow Level 3",
            "$description": "This is the shadow 3 description updated",
            "$value": {
              "color": "#00FF00",
              "offsetX": 0,
              "offsetY": 0,
              "blur": "0.75rem",
              "spread": "24px"
            }
          }
        ]
      },
      "radius": {
        "no": {
          "$type": "number",
          "$value": 0
        },
        "xxs": {
          "$type": "number",
          "$value": 4
        },
        "xs": {
          "$type": "number",
          "$value": 8,
          "$extensions": {
            "mode": {
              "dark": 24
            }
          }
        },
        "round": {
          "$type": "dimension",
          "$value": "999rem"
        }
      },
      "size": {
        "$description": "measurement units like size, spacing, and layout specs",
        "n0": {
          "$type": "dimension",
          "$value": "0rem"
        },
        "n1": {
          "$type": "dimension",
          "$value": "0.25rem"
        },
        "n2": {
          "$type": "dimension",
          "$value": "0.5rem",
          "$extensions": {
            "mode": {
              "dark": "6rem"
            }
          }
        },
        "n3": {
          "$type": "dimension",
          "$value": "0.75rem"
        },
        "n4": {
          "$type": "dimension",
          "$value": "999rem",
          "$extensions": {
            "mode": {
              "dark": "0.75rem"
            }
          }
        },
        "n5": {
          "$type": "dimension",
          "$value": 8
        },
        "n6": {
          "$type": "dimension",
          "$value": "0.75rem",
          "$extensions": {
            "mode": {
              "dark": 8
            }
          }
        },
        "n10": {
          "$type": "dimension",
          "$value": "1rem"
        }
      },
      "typography": {
        "family": {
          "primaryFont": {
            "$value": "Comic Sans MS",
            "$type": "fontFamily"
          },
          "headingFont": {
            "$value": "Haas Grot Disp",
            "$type": "fontFamily"
          },
          "codeFont": {
            "$value": "Kode Mono",
            "$type": "fontFamily"
          },
          "bodyFont": {
            "$value": [
              "Helvetica",
              "Arial",
              "sans-serif"
            ],
            "$type": "fontFamily"
          }
        },
        "fonts": {
          "Header 1": {
            "$name": "heading",
            "$description": "This is the codeblock description",
            "$type": "typography",
            "$title": "Header 1",
            "$value": {
              "fontFamily": "Haas Grot Disp",
              "fontSize": 40,
              "fontWeight": "75 Bold",
              "letterSpacing": "0px",
              "lineHeight": 1.9
            }
          },
          "Code Block": {
            "$name": "code",
            "$description": "This is the codeblock description",
            "$type": "typography",
            "$title": "Code Block",
            "$value": {
              "fontFamily": "Kode Mono",
              "fontSize": 40,
              "fontWeight": 700,
              "letterSpacing": "20px",
              "lineHeight": 1.9
            }
          },
          "Small Code Bloc": {
            "$name": "smallCode",
            "$description": "This is the small codeblock description",
            "$type": "typography",
            "$title": "Small Code Block",
            "$value": {
              "fontFamily": "Kode Mono",
              "fontSize": "1rem",
              "fontWeight": "Regular",
              "letterSpacing": "0.25rem",
              "lineHeight": "24px"
            }
          }
        }
      }
    },
    "button": {
      "color": {
        "foreground": {
          "$type": "color",
          "$description": "primary foreground color",
          "$value": "#aa4411",
          "$extensions": {
            "mode": {
              "dark": "#ff0011"
            }
          }
        },
        "background": {
          "$type": "color",
          "$description": "primary background color",
          "$value": "#ff0011",
          "$extensions": {
            "mode": {
              "dark": "#aa4411"
            }
          }
        },
        "intent": {
          "primary": {
            "default": {
              "background": {
                "$type": "color",
                "$description": "color description",
                "$value": "#ff0011"
              }
            }
          },
          "secondary": {
            "$type": "color",
            "$description": "color description",
            "$value": "#aa4411"
          }
        }
      }
    }
  }
}
